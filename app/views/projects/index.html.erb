<%= render 'shared/flashes' %>

<div class="all">
  <!-- Sidebar -->
  <%= render 'shared/sidebar' %>
  <div class="all-without-sidebar">
    <div class="navnav">
      <%= render 'shared/navbar' %>
    </div>
    <div class="main-screen">
      <div class="title">
        <h1>All my projects</h1>
        <div class="call-to-action"><i class="fas fa-plus"></i><%= link_to " Add a new project ", projects_path %></div>
      </div>
      <h2>On-going (<%= @projects.count %>)</h2>
      <div class="row">
        <% @projects.each do |project| %>
        <div class="col-xs-12 col-sm-4 col-md-6">
          <div class="card">
            <div class="card-first-line">
              <h3><%= project.name %></h3>
              <div class="card-category">
                <h4><%= project.category %></h4>
              </div>
            </div>

              <div class="inner-card">
                <div class="card-desc">
                  <p><%= project.description %></p>
                </div>
                <div class="card-link text-center">
                  <p><%= link_to "Find out more", projects_path%> </p>
                </div>
              </div>

          </div>
        </div>
        <% end %>
      </div>
      <h2>Closed projects (0)</h2>
    </div>
  </div>
</div>

