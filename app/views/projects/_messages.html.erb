<% @tasks.each do |task| %>
  <% task.messages.each do |message| %>
    <div class="message">
      <% if message.user.is_customer %>
        <%= cl_image_tag message.user.photo, class:"avatar" %>
        <strong><%= message.user.first_name %> <%= message.user.last_name %></strong>
        <div class="message-body">
          <div class="message-content">
            <%= message.content %>
          </div>
        </div>
        <div class="tasklinks">
          <%= link_to task_message_path(message), method: :delete, data: {confirm: "Are you sure?"} do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
          <%= link_to edit_task_message_path(message) do %>
            <i class="fas fa-pen"></i>
          <% end %>
        </div>
      <% else %>
        <div class="tasklinks">
          <%= link_to task_message_path(message), method: :delete, data: {confirm: "Are you sure?"} do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
          <%= link_to edit_task_message_path(message) do %>
            <i class="fas fa-pen"></i>
          <% end %>
        </div>
        <div class="message-body">
          <div class="message-content", id="right">
            <%= message.content %>
          </div>
        </div>
        <strong>
          <%= message.user.first_name.upcase %> <%= message.user.last_name.upcase %>
        </strong>
        <%= cl_image_tag message.user.photo, class:"avatar" %>
      <% end %>
    </div>
  <% end %>
<% end %>
