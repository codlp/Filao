<%= render 'shared/flashes' %>
<%= render 'shared/sidebar' %>
<div class="all-without-sidebar">
  <div class="navnav">
    <%= render 'shared/navbar' %>
  </div>
    <div class="main-screen">


        <%= simple_form_for([ @project, @task ]) do |f| %>
        <div class="post">
          <div class="form-post-wrapper">
            <h1 class="text-center">Edit your task</h1>
            <div class="form-item">
              <%= f.input :name, placeholder: 'Enter the task name' %>
            </div>
            <div class="form-item">
              <%= f.input :description, placeholder: 'Enter the task description' %>
            </div>
            <div class="form-item">
              <%= f.input :deliverable, :as => :boolean, :label => false, :inline_label => true %>
              <span> Is the task deliverable? </span>
            </div>


            <div class="calendar">
              <h2>Please enter the task start date and end date</h2>
              <div class="form-wrapper list-inline" style="width: 400px; margin: 0 auto;">

                <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
                <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>

              </div>
            </div>

            <div class="text-center">
              <%= f.submit class: 'btn btn-success'%>
              <%= link_to 'Cancel', projects_path(@project), class: 'btn btn-danger' %>
              <button id="sweet-alert-demo" class="btn btn-danger">Delete</button>
                     <%= link_to "Delete", task_path(@task), method: :delete, id: "delete-link", class: "hidden" %>
            </div>
          </div>
        <% end %>
        </div>


    </div>
  </div>
</div>
