<!-- Navbar when the user is not logged in -->

<% if user_signed_in? == false %>

  <div class="navbar-wagon">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "logo.png", height: 50 %>
    <% end %>

    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    </div>
  </div>

<% end %>

<!-- Banner -->

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/1/work-station-straight-on-view.jpg?ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80);">
  <div class="container text-center">
    <h1>Filao</h1>
    <p>The perfect dashboard for freelancers</p>
    <p>Improving communication between freelancers and their clients</p>
    <%= link_to "Get started", new_user_session_path, class: "btn call-to-action" %>
  </div>
</div>

<!-- Icons -->
<div class="icons-wrapper">
  <div class="container">
    <h2 class="section-title text-center">Why use Filao?</h2>

      <div class="row">
        <div class="col-lg-4 col-sm-6 col-xs-8 col-offset-2">
          <div class="icon mx-auto mb-5 mb-lg-0">
            <%= image_tag("projects.png", class: "icon img-circle") %>
            <p class="icon-description">Have a clear vision of my projects</p>
          </div>
        </div>

        <div class="col-lg-4 col-sm-6 col-xs-8 col-offset-2">
          <div class="icon mx-auto mb-5 mb-lg-0">
            <%= image_tag("documents.png", class: "icon img-circle") %>
            <p class="icon-description">Exchange documents with my clients</p>
          </div>
        </div>

        <div class="col-lg-4 col-sm-6 col-xs-8 col-offset-2">
          <div class="icon mx-auto mb-5 mb-lg-0">
            <%= image_tag("tasks.png", class: "icon img-circle") %>
            <p class="icon-description">My client can see my advancement</p>
          </div>
        </div>
      </div>
  </div>
</div>

<!-- Screenshot section -->
<div class="wrapper">
  <div class="container">
    <h2 class="section-title text-center">Simplify your freelance life now</h2>

    <div class="flexbox">
      <div class="flex-item">
        <%= link_to "Get started", new_user_session_path, class: "btn call-to-action" %>
      </div>
      <div class="flex-item">
        <%= image_tag("placeholder.png", class: "icon img-circle") %>
      </div>
    </div>
  </div>
</div>
